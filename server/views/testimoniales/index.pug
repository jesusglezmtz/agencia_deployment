extends ../layout/index

block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row

            .col-md-12
                blockquote.text-center Lee sobre nuestros clientes y experiencias
                 include ../layout/partials/testimoniales



            .col-md-12
                h2.text-center Agregar un testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row-justify-content.center
                    .col-md-8
                        form(action='/testimoniales', method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", class="form-control", type="text", placeholder="Nombre", name="nombre", value=nombre)
                            .form-group
                                label(for="correo") Correo electr√≥nico
                                input(id="correo", class="form-control", type="email", placeholder="Correo", name="correo",value=correo)

                            .form-group
                                label(for="mensaje") Mensaje
                                textarea(id="mensaje", class="form-control", type="text", placeholder="Mensaje", name="mensaje", rows="3")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")

